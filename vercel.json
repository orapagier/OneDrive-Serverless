{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["firebase-config.json"],
        "maxLambdaSize": "10mb"
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html",
      "headers": {
        "Cache-Control": "public, max-age=3600, must-revalidate"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Cache-Control": "no-cache, no-store"
      }
    },
    {
      "src": "/(.*\\.(ico|png|jpg|jpeg|svg|css|js|woff2))",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://snsfiles.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/download/:fileId",
      "destination": "/api/download?fileId=:fileId"
    }
  ],
  "redirects": [
    {
      "source": "/old-path",
      "destination": "/",
      "permanent": true
    }
  ],
  "overrides": [
    {
      "path": "public/index.html",
      "headers": {
        "Cache-Control": "no-cache, no-store"
      }
    }
  ],
  "functions": {
    "api/fetchFiles.js": {
      "memory": 3008,
      "maxDuration": 30,
      "includeFiles": ["service-account.json"]
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}